
#pip install newsapi-python
from newsapi import NewsApiClient
import requests  
import pandas as pd
import math
import json
import datetime
from datetime import date, timedelta
from collections import defaultdict
import config




api = NewsApiClient(api_key=config.api_key)

class GatherArticles:

    def __init__(self, api, key_words):
        self.api_key = api
        self.key_words = key_words
        self.end_date = date.today() - timedelta(days = 30)

    def _grab_initial(self):
        all_articles = self.api_key.get_everything(q=self.key_words, to= date.today(), from_param= self.end_date, page=1)
        results = all_articles['totalResults']
        pages = math.ceil((results/100))
        with open('articles{}.json'.format(datetime.datetime.now().strftime("%Y%m%d")), 'w') as fp:
            json.dump(all_articles, fp)
        return pages
    
    def grab_articles(self):
        self._grab_initial()
        with open('articles{}.json'.format(datetime.datetime.now().strftime("%Y%m%d")), "r+") as file:
            data = json.load(file)
            for i in range (2, 6):
                all_articles = self.api_key.get_everything(q=self.key_words, to= date.today(), from_param= self.end_date, page=i)
                data.update(all_articles)
                file.seek(0)
            json.dump(data, file)
        print('Saved.')


run = GatherArticles(api,'COVID OR Coronavirus')

run.grab_articles()
